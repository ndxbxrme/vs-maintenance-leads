@import '../../variables'
.task-popup-dir
  box-sizing border-box
  position absolute
  width 480px
  max-width calc(100vw - 20px)
  transition all $transition $bounce
  z-index 30
  padding 1rem 0
  .pointer
    z-index -1
    position absolute
    top .75rem
    left 20px
    width 2rem
    height 2rem
    content ''
    background #666
    transform rotate(45deg) translate3D(0,0,0)
    transition left $transition $bounce
  .popup
    background white
    border 1px solid vs-grey
    border-radius 5px
    padding 20px 10px 0 10px
    display flex
    justify-content space-between
    font-size 1rem
    box-shadow 2px 2px 25px rgba(20,20,20,0.6)
    .details
      .details-item
        display flex
        margin-bottom 1rem
        padding-right 1rem
        img
          border-radius 50%
          border 1px solid #ccc
          vertical-align middle
        label
          font-weight bold
          margin-right 1rem
          min-width 60px
          color vs-orange
    .controls
      text-align right
      .checkbox-item
        white-space nowrap
        margin-bottom .5rem
      .edit
        vs-button-alt()
        margin-bottom .5rem