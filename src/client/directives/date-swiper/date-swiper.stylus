@import '../../variables'

$dark = #23292c
$darker = mix($dark, black, 50%)
$light = #e2e4e6
$lighter = mix($light, white, 40%)
$base = vs-orange
$alert = #f06292
// structural/functional
.date-swiper-holder
  z-index 3000
  display flex
  align-items center
  justify-content center
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  transform: translate3d(-100%, 0%, 0)
  transition: transform 300ms ease-out
  background rgba(0,0,0,0.2)
  &.is-active
    transform: translate3d(0%, 0%, 0)
  .date-swiper-box
    max-width 36rem
    box-shadow 0 4px 6px rgba(0,0,0,0.4)
    .date-swiper
      padding: 0
      overflow: hidden
      display: flex
      flex-direction: row
      font-family: "DIN Alternate", sans-serif
      user-select: none
      *, *::before, *::after
        box-sizing: border-box
      // important structure
      ul
        padding: 0
        margin: 0
        display: flex
        flex-direction: row
        flex-wrap: wrap
        li
          list-style-type: none
          padding: .2em 0
          flex: 1 0 14.285714286%
          text-align: center
      .carousel
        display: flex
        flex-direction: row
        position: relative
        // important interactions
        &.animate
          transition: transform 300ms ease-out
      .month
        flex: 1 0 100%
        padding: .5em
        position: relative
      .month-name
        font-size: 1.2em
        padding: .5em
      .day-names
        font-size: .8em
        line-height: 1.5
      .days
        font-size: 1em
        line-height: 2
      .date
        padding: 0
        border-radius: 100%
        margin: .3em auto
        width: 2em
        height: 2em
        pointer-events: none
  .button-row
    display flex
    justify-content center
    padding 0.5rem
    background #edebfa
    .done
      height 2em
      line-height 2em
      text-transform uppercase
      border 1px solid #333
      border-radius 1em
      text-align center
      min-width 12em
      box-shadow inset 0 -10px 2px rgba(0,0,0,0.1)
      background #fff
      cursor pointer
// Theme/Design related
.date-swiper
  z-index: 5
  background: $dark
  color: $lighter
  // important interaction
  &:not(.dragging)
    transition: transform 300ms ease-out
  .month
    background: $base
  .month-holder
    display flex
    position relative
    .prev, .next
      width 2em
      height 2em
      border 2px solid #fff
      border-radius 100%
      text-align center
      line-height 1.8em
      cursor pointer
      position absolute
    .next
      right 0
    .month-name
      text-transform: uppercase
      flex 1
      text-align center
    .month-year
      opacity: .65
  .day-names
    text-transform: uppercase
    border-top: .1em solid
    border-bottom: .1em solid
    color: rgba($dark, 0.5)
  .days li
    &:not(.day-in-curr-month)
      opacity: .65
  .is-today .date
    background: rgba($dark, 0.25)
  .is-selected
    .date
      background: $alert
      color: $lighter
      box-shadow: 0 0 0 .1em
  .toggle
    background: rgba($dark, 0.25)
    color: $light
@media screen and (max-width: 400px)
  .date-swiper-holder
    transform: translate3d(-200%, 0%, 0)