vs-orange = #f15b25
vs-grey = #464e53
vs-green = #25f15c
vs-amber = orange
vs-red = #f12540
vs-lightgrey = #ccc
vs-tablegrey = #f5f5f5
vs-white = #fbfbfb
vs-brightwhite = #fdfdfd
vs-text = #394a58
vs-link = #44789f
vs-silver = #9ca4ab
vs-lightsilver = #e7eef3
vs-red = #bd1622
vs-warning = #d17b36
vs-button()
  display inline-block
  white-space nowrap
  padding 1rem
  border 1px solid #ccc
  border-radius 0.5rem
  color vs-orange
  background white
  transition all 0.4s ease-in-out
  outline none
  cursor default
  &:hover
    background vs-orange
    color white
  &:disabled
    opacity 0.4
    &:hover
      background white
      color vs-orange