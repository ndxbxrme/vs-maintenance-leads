@import '../../variables'
.calendar-dir
  margin-top 1rem
  margin-right 1rem
  overflow hidden
  .controls
    padding-left 3.5rem
    text-align center
    margin-bottom 1.2rem
    a
      color vs-orange
      text-decoration none
      padding .5rem
      display inline-block
  .carousel
    display flex
    &.animate
      transition transform 300ms ease-out
    .week
      display flex
      flex 1 0 100%
      box-sizing border-box
      padding-left 4rem
      flex-wrap wrap
      @media screen and (max-width:819px)
        padding-left 3rem
      .day
        flex 1
        text-align center
        .income
          text-align left
          padding 1rem
          .income-item
            display flex
            flex-wrap wrap
            justify-content space-between
            margin-bottom 0.2rem
            .total
              color #035c03
              &.loss
                color red
          .mobile
            display none
          /*
          @media screen and (max-width:819px)
            padding 0.1rem
            .mobile
              display block
              .income-item
                display block
                span
                  display block
            .desktop
              display none
          */
        .legend
          display none
          padding-right .5rem
          font-size 1rem
        .mobile
          display none
        /*
        @media screen and (max-width:819px)
          .mobile
            display block
          .desktop
            display none
        */
        .hours
          position relative
        .hour
          border-top 1px solid #666
          height 6rem
          border-left 1px solid #ccc
          position relative
          box-sizing border-box
          &:before
            position absolute
            content ''
            top 50%
            left 0
            width 100%
            height 50%
            border-top 1px solid #ccc
            pointer-events none
            background rgba(0,0,0,0.01)
          &:hover
            background #eee
          &:last-of-type
            border-bottom 1px solid #666
        &.selected
          .hour
            background lighten(vs-orange, 40)
        .task-dir
          position absolute
          left 0
          background vs-grey
          border 1px solid #f1f1f1
          border-radius 5px
          box-sizing border-box
          width calc(100% + 1px)
          text-align left
          padding 10px
          overflow hidden
          z-index 10
          cursor default
          color #f1f1f1
          font-size .9rem
          p
            margin 4px 0 0 37px
            color white
          img
            margin calc(2.5rem - 24px) 10px 0 0
            float left
            border 1px solid #f1f1f1
            border-radius 50%
          &.confirmed
            background darken(vs-green, 40%)
            color #f1f1f1
          &.quote
            background vs-orange
            color #f1f1f1
          &:hover
            background #ddd
            z-index 200
        &:first-of-type
          .legend
            display flex
            align-items center
            position absolute
            right 100%
            height 100%
            top -50%
            white-space nowrap
        &:last-of-type
          .hour
            border-right 1px solid #ccc
          .task
            border-right 1px solid #666
            width 100%
